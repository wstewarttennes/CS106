
public class Calculator {
	public static void main(String[] args) {

		//declare variables
		double atbats;
		double hits;
		double average;
		
		//calculate average yo
		atbats = 8;
		hits = 4;
		average = hits/atbats;
		
		//print that shit
		System.out.println("Your baseball player batted");
		
		System.out.println("Your baseball player's average is:");
		System.out.print(average);
		
		//
	}
}
