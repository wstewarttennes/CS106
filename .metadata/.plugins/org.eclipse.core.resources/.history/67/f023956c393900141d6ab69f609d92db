
public class Calculator {
	public static void main(String[] args) {

		//declare variables
		double atbats;
		double hits;
		double average;
		
		//calculate yo
		atbats = 7;
		hits = 3;
		average = hits/atbats;
		
		//print that shit
		System.out.println("Your baseball player's average is:");
		System.out.println(average);
	}
}
